{
    "extends": "../../tsconfig.json", // si tenés uno global en la raíz
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "outDir": "dist",
        "rootDir": "src", // apunta a apps/backend/src
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".", // base para rutas relativas
        "paths": {
        // permite importar desde domain/src usando rutas limpias
            "domain/*": ["../../domain/src/*"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
